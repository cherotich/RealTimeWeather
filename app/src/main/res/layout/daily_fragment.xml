            <!--                android:textColor="#ffffff"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:background="@drawable/mybutton2"-->
            <!--                android:layout_centerVertical="true"-->
            <!--                android:text="Buttons"-->
            <!--                android:layout_toRightOf="@id/button1" />-->


        </RelativeLayout>

        <!--</ScrollView>-->


    </RelativeLayout>

</RelativeLayout>